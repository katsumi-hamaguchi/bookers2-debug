<table class="table">
		<tr><%= attachment_image_tag user, :profile_image, fallback: "no_image.jpg", size: "100x100" %></tr>

		<tr>
			<th>name</th>
			<th><%= user.name %></th>
		</tr>

		<tr>
			<th>introduction</th>
			<th><%= user.introduction %></th>
		</tr>
		<tr>
			<th>follows</th>
        	<th><%= link_to follows_show_path(user.id) do %><%= user.followings.count %>人<% end %></th>
        </tr>
        <tr>
        	<th>followers</th>
        	<th><%= link_to followers_show_path(user.id) do %><%= user.followers.count %>人<% end %></th>
        </tr>

		
		
</table>

<div class="row">
	<%= link_to '',edit_user_path(user), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench edit_user_#{user.id}" %>
</div>

