<h3>コメント一覧</h3>

<% book_comments.each do |book_comment| %>
    <div class=<%= 'comment' + book_comment.id.to_s %> >
    	name:<%= book_comment.user.name %>

	  	day:<%= book_comment.created_at.strftime('%Y/%m/%d') %>

		comment:<%= book_comment.comment %>

	    <% unless current_user != book_comment.user %>
			<%= link_to "削除",  book_book_comment_path(book_comment.book.id,book_comment.id), method: :delete, remote: true %>
		<% end %>
    </div>

<% end %>

