<div class="container">
	<div class="row">
		
		<% if notice %>
    　<p><%= notice %></p>
    <% end %>
    <% if alert %>
       <p><%= alert %></p>
    <% end %>
		<div class="col-xs-3">

			<h2>User info</h2>
			<%= render 'users/profile', user: current_user %>

			<h2>New book</h2>
			<%= render 'books/newform', book: @new_book %>

		</div>

		<div class="col-xs-9">
			<h2>Book detail</h2>

			<table class="table">
					<tr>
						<td>
							<%= link_to (@book.user) do %>
							<%= attachment_image_tag(@book.user, :profile_image, fallback: "no-image-mini.jpg", size: "100x100") %><br>
							<%= @book.user.name %>
							<% end %>
						</td>
						<td><%= link_to @book.title, @book %></td>
						<td><%= @book.body %></td>
						<td>コメント数:<%= @book.book_comments.count %></td>

				    <% if @book.favorited_by?(current_user) %>
				      
				      <td class="fa fa-heart" aria-hidden="true" style="color: red;">
				      	<%= link_to book_favorites_path(@book), method: :delete do %>

				      <%= @book.favorites.count %> いいね
                      <% end %>
                      </td>
	                <% else %>
	                  
                       <td class="fa fa-heart-o" aria-hidden="true">
                       	<%= link_to book_favorites_path(@book), method: :post do %>
                       <%= @book.favorites.count %> いいね
					   <% end %>
					   </td>
					 <% end %>


						    


					<% if @book.user == current_user %>
						<td><%= link_to "Edit",edit_book_path(@book), class: "btn-sm btn-success edit_book_#{@book.id}" %></td>
						<td><%= link_to "Destroy",@book, method: :delete, data: {confirm: "本当に削除してもよろしいですか？"}, class: "btn-sm btn-danger destroy_book_#{@book.id}" %></td>
					<% end %>
					</tr>
			</table>

			<%= form_for([@book, @book_comment]) do |f| %>
			  <%= f.text_area :comment %>
			  <%= f.submit "送信" %>
			<% end %>
            
            <% @book.book_comments.each do |book_comment| %>
            <%= book_comment.user.name %>

            <%= book_comment.created_at.strftime('%Y/%m/%d') %>

            <%= book_comment.comment %>
            
            <%= link_to "削除", book_path(@book), method: :delete %>
            <br>



            <% end %>

				  		



		</div>
	</div>
</div>

